<%= stylesheet_link_tag "index_style_sheet.css" %>
<h1>Contract List</h1>
 
<table cellpadding="10">
  <tr>
    <td><b>Company Name</b></td>
    <td><b>Account Number</b></td>
  </tr>
  <% @contract.each do |contract| %>
    <tr>
      <td><%= contract.compName %></td>
      <td><%= contract.accountNum %></td>
      <td><%= link_to 'Show', contract %></td>
    <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
    <td><%= link_to 'Destroy', contract_path(contract),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back to Home', root_path %>
